<div class="body">
	<div class="container">
		<div class="row">
			<div class="col-xs-10 col-xs-offset-1">
				<h2 class="title">カートの内容</h2>
				<table class="tableindex table-condensed" width="100%" >
					<tr>
						<th>商品画像</th>
						<th>商品</th>
						<th>個数</th>
						<th>金額（税込）</th>
						<th>削除</th>
					</tr>
					<% @cart_items.each do |cart_item| %>
					<tr>
						<td width="10%", style="text-align:center;"><%= attachment_image_tag cart_item.item, :jacket_image, :fill, 100, 100, size: '100x100', fallback: 'no_image.jpg' %></td>
						<td width="50%", style="text-align:center;"><font size="2"><%= cart_item.item.title %></font></td>
						<td width="10%", style="text-align:center;"><font size="2"><%= cart_item.amount %></font></td>
						<td width="20%", style="text-align:center;"><font size="2">¥<%= cart_item.item.price %></font></td>
						<td width="10%"><%= link_to "削除", cart_item_path(cart_item.id), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-default col-xs-12" %></td>
					</tr>
					<% end %>
				</table>
				<div class="link_path1">
				<%= link_to '商品一覧へ戻る', items_path, :class => 'btn btn-default col-xs-3 col-xs-offset-3' %>
				</div>
				<div class="link_path1">
				<%= link_to '購入画面へ', new_order_path, :class => 'btn btn-default col-xs-3 cartitembtn' %>
				</div>
			</div>
		</div>
	</div>
</div>
