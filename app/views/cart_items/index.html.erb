<% if notice %>
<p id="notice"><%= notice %></p>
<% end %>
<br>

<table>
	<tr>
		<th>商品画像</th>
		<th>商品</th>
		<th>個数</th>
		<th>金額（税込）</th>
		<th>削除</th>
	</tr>
	<% @cart_items.each do |cart_item| %>
	<tr>
		<td text-align:center;><%= attachment_image_tag cart_item.item, :jacket_image, :fill, 100, 100, size: '100x100', fallback: 'no_image.jpg' %></td>
		<td text-align:center;><font size="4"><%= cart_item.item.title %></font></td>
		<td text-align:center;><font size="4"><%= cart_item.amount %></font></td>
        <td text-align:center;><font size="4"><%= cart_item.item.price %>円</font></td>
		<td><%= link_to "削除", cart_item_path(cart_item.id), method: :delete %></td>
	</tr>
	<% end %>
</table>
<br>
<span>　　</span><%= link_to '商品一覧へ戻る', items_path, :class => 'btn' %> <%= link_to '購入画面へ', new_order_path, :class => 'btn' %>