<div class="container">
    <div class="row">
            <div class="col-md-8 col-md-offset-2">
                <h2>住所入力フォーム</h2>
                <%= form_for(@address, url: user_addresses_path(current_user.id)) do |f| %>
                <%= render 'layouts/error_message', form: @address %>
                    <div class="form-group">
                        <%= f.label :名前 %><br>
                        <%= f.label :姓 %>
                        <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", size: "10x10", class: "form-control" %>
                        <%= f.label :名 %>
                        <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", size: "10x10", class: "form-control" %>
                    </div>

                    <div class="form-group">
                        <%= f.label :名前（カタカナ） %><br>
                        <%= f.label :姓 %>
                        <%= f.text_field :first_kana_name, autofocus: true, autocomplete: "first_kana_name", size: "10x10", class: "form-control" %>
                        <%= f.label :名 %>
                        <%= f.text_field :last_kana_name, autofocus: true, autocomplete: "last_kana_name", size: "10x10", class: "form-control" %>
                    </div>

                    <div class="form-group">
                        <%= f.label :郵便番号 %><br />
                        <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code", size: "10x10", class: "form-control" %>
                    </div>

                    <div class="form-group">
                        <%= f.label :都道府県 %><br />
                        <%= f.text_field :prefecture, autofocus: true, autocomplete: "prefecture", size: "10x10", class: "form-control" %>
                    </div>

                    <div class="form-group">
                        <%= f.label :市区町村　番地 %><br />
                        <%= f.text_field :city_address, autofocus: true, autocomplete: "city_address", size: "10x10", class: "form-control" %>
                    </div>

                    <div class="form-group">
                        <%= f.label :建物名　部屋番号 %><br />
                        <%= f.text_field :building, autofocus: true, autocomplete: "building", size: "10x10", class: "form-control" %>
                    </div>



                    <div class="actions">
                        <%= f.submit "登録する", class:"btn btn-success" %>
                    </div>
                    <% end %>
                </div>
