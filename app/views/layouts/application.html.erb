<!DOCTYPE html>
<html>
  <head>
    <title>WakuwakuDisc</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <dl class="searchbox">
      <%#= search_form_for @search, url: items_path do |f| %>
        <dt><%#= f.text_field :title_cont ,placeholder: 'アーティスト名やタイトル名など' %></dt>
        <dd><%#= f.submit ("検索") , class: 'search-btn'%></dd>
      <%# end %>
    </dl>
    <%= yield %>
  </body>
</html>
