    <% if current_user && item.favorited_by?(current_user) %>
        <span class="favorite_span">
            <%= link_to item_favorites_path(item.id), method: :delete, remote: true do %>
                <i class="fas fa-heart" style="color: white;">お気に入り済み</i>
            <% end %>
    <% else %>
            <%= link_to item_favorites_path(item.id), method: :post, remote: true do %>
                <i class="far fa-heart" style="color: white;">お気に入りする</i>
            <% end %>
        </span>
    <% end %>
