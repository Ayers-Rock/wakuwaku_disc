    <% if item.favorited_by?(current_user) %>
        <button>
            <%= link_to item_favorites_path(item.id), id: "favorite-button", method: :delete, remote: true do %>
                <i class="fas fa-heart" style="color: red;">お気に入り済み</i>
            <% end %>
    <% else %>
            <%= link_to item_favorites_path(item.id), id: "favorite-button", method: :post, remote: true do %>
                <i class="far fa-heart" style="color: red;">お気に入りする</i>
            <% end %>
        </button>
    <% end %>