 <div class="container label-box">
        <div class="row">
            <div class="col-lg-10 col-lg-offset-1">
                <div class="form-box">
                    <%= render 'layouts/error_message', form: @artist %>
                    <%= form_for([:admin, @artist]) do |f| %>
                        <h2>新規アーティスト追加</h2>
                        <%= f.text_field :artist_name, placeholder: "アーティスト名を入力して下さい" %></p>
                        <p><%= f.submit "追加", class: "btn btn-primary" %></p>
                    <% end %>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-10 col-lg-offset-1">
                <table class="table-index table-condensed">
                    <tr>
                        <th>id</th>
                        <th>アーティスト</th>
                        <th></th>
                    </tr>
                    <% @artists.each do |artist| %>
                        <tr>
                            <td><%= artist.id %></td>
                            <td><%= artist.artist_name %></td>
                            <td>
                                <%= link_to "削除", admin_artist_path(artist.id), class: "btn btn-danger", method: :delete, "data-confirm" => "本当に削除しますか？"%>
                            </td>
                        </tr>
                    <% end %>
                </table>
                <div class="back-text-box">
                    <%= link_to "商品管理へ戻る", admin_items_path %>
                </div>
            </div>
        </div>
    </div>