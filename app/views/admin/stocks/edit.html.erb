
<div class="container">
    <div class="row">
        <% if notice %>
            <p id="notice"><%= notice %></p>
        <% end %>
        <div class="col-xs-6 col-xs-offset-3">
            <div class="box">
                <div style="padding: 10px; margin-bottom: 10px; border: 1px solid #333333;">
                    <h2 align="center">在庫入荷情報編集</h2>
                    <div class="row">
                        <div class="col-xs-6 col-xs-offset-3">
                        <br>
                        <br>
                            <div class="line">
                            <h5><font color="#1F9BFD">アーティスト名</font></h5>
                            <p class="boxes"><%= @stock.item.artist.artist_name %></p>
                            </div>
                            <h5><font color="#1F9BFD">シングル/アルバム名</font></h5>
                            <p class="boxes"><%= @stock.item.title %></p>
                            <div class="line">
                            </div>
                            <br>
                            <br>
                            <h5 align="center">現在の在庫数</h5>
                            <%# <p>TODO:在庫数を入力する</%#> %>
                            <p class="boxes"><%= form_with(model: @stock, url: admin_item_stock_path, local: true) do |f| %></p>
                            <br>
                            <h5 align="center">入荷年月日</h5>
                            <p class="boxes"><%= f.date_field :arrival_date, value: Time.now.strftime("%Y-%m-%d") %></p>
                            <br>
                            <h5 align="center">入荷数入力</h5>
                            <p class="boxes"><%= f.number_field :arrival_count, min: 1 %></p>
                            <%# <%= f.hidden_field :id, value: @item.id %>
                            <br>
                            <div class="boxes">
                            <%= f.submit :class=>"btn btn-info" %>
                            <% end %>
                        </div>
                    </div>
                </div>
                <br>
                <br>
                </div>
            </div>
        </div>
    </div>
</div>
<br>
<br>