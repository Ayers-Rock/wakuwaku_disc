
<div class="body">
<div class="container">
    <div calss="row">
        <% if notice %>
        <p id="notice"><%= notice %></p>
        <% end %>
        <div class="col-lg-8">
            <h2>注文詳細</h2>
            <table calss="table2">
                <tr>
                    <th>注文番号</th>
                    <td text-align:center;>
                        <font size="4">
                            <%= @order.user_id %>
                        </font>
                    </td> <%#注文番号カラム違う%>
                </tr>
                <tr>
                    <th>注文日時</th>
                    <td text-align:center;>
                        <font size="4">
                            <%= @order.created_at %>
                        </font>
                    </td>
                </tr>
                <tr>
                    <th>お届け先名前（漢字）</th>
                    <td text_align:center;>
                        <font size="4">
                            <%= @order.user.last_name + @order.user.first_name %>
                        </font>
                    </td>
                </tr>
                <tr>
                    <th>お届け先</th>
                    <td text_align:center;>
                        <font size="4">
                            <%= @order.prefecture + @order.city_address + @order.building %>
                        </font>
                    </td>
                </tr>
                <tr>
                    <th>配送状況</th>
                    <td text-align:center;>
                        <font size="4">
                            <%= @order.status_i18n %>
                        </font>
                    </td>
                </tr>
                <tr>
                    <th>支払方法</th>
                    <td text-align:center;>
                        <font size="4">
                            <%= @order.payment_i18n %>
                        </font>
                    </td>
                </tr>
            </table>
            <div>▼配送セット</div>
            <table class="table1">
                <tr>
                    <th>商品</th>
                    <th>単価（税込）</th>
                    <th>個数</th>
                    <th>小計</th>
                </tr>
                <% @order.order_items.each do |order_item| %>
                <tr>
                    <td text-align:center;><font size="4"><%= order_item.item.title %></font></td>
                    <%# tax_includeは税込価格 %>
                    <% tax_include = order_item.purchase_price * 1.10 %>
                    <td text-align:center;><font size="4">¥<%= tax_include.round(0) %></font></td>
                    <td text-align:center;><font size="4"><%= order_item.amount %></font></td>
                    <% subtotal = tax_include * order_item.amount %>
                    <%# .floorは小数点を切り捨て/.round(0)は小数点切り上げ %>
                    <td text-align:center;><font size="4">¥<%= subtotal.round(0) %></font></td>
                </tr>
                <% end %>
                <tr>
                    <td colspan="3">送料（税込）→</td>
                    <td text-align:center;><font size="4">¥<%= @order.postage %></font></td>
                </tr>
            </table>
            <bt>
            <br>
            <p class="total_price">
                <strong>お支払い合計　¥ </strong>
                <%= @order.total_price.round(0) %>
            </p>
            <div>注文者情報</div>
                <table class="table3">
                    <tr>
                        <th>名前（漢字）</th>
                        <td text-align:center;>
                            <font size="4">
                                <%= @order.user.last_name + @order.user.first_name %>
                            </font>
                        </td>
                    </tr>
                    <tr>
                        <th>名前（カタカナ）</th>
                        <td text-align:center;>
                            <font size="4">
                                <%= @order.user.last_kana_name + @order.user.first_kana_name %>
                            </font>
                        </td>
                    </tr>
                    <tr>
                        <th>住所</th>
                        <td text-align:center;>
                            <font size="4">
                                <%= @order.user.prefecture + @order.user.city_address + @order.user.building %>
                            </font>
                        </td>
                    </tr>
                    <tr>
                        <th>電話番号</th>
                        <td text-align:center;>
                            <font size="4">
                                <%= @order.user.tel_number %>
                            </font>
                        </td>
                    </tr>
                    <tr>
                        <th>メールアドレス</th>
                        <td text-align:center;>
                            <font size="4">
                                <%= @order.user.email %>
                            </font>
                        </td>
                    </tr>
                </table>
                <br>
                <%= link_to "注文管理画面へ戻る", admin_orders_path %>
        </div>
    </div>
</div>
</div>
