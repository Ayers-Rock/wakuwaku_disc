<div class="body">
	<div class="container">
		<div class="row">
			<div class="col-xs-10 col-xs-offset-1">
				<h2 class="title">受注履歴</h2>
				<br>
				<div class="order-search-box">
					<%= form_tag(admin_orders_path,method: :get) do %>
						<%= text_field_tag :search, "", placeholder: "注文者、配送先の氏名、注文番号で検索" %>
						<%= button_tag '<i class="fa fa-search"></i>'.html_safe, type: 'submit', :name => nil %>
					<% end %>
				</div>
				<table class="table_index table-condensed">
					<tr>
						<th>注文番号</th>
						<th>購入者</th>
						<th>購入日</th>
						<th>購入価格総計</th>
						<th>ステータス</th>
						<th></th>
					</tr>
					<% @orders.each do |order| %>
					<tr>
						<td class="date"><%= order.user.last_name + order.user.first_name %></td>
						<td class="date"><%= order.created_at.strftime("%Y-%m-%d %H:%M") %></td>
						<td class="date"><%= order.total_price.round(0) %>円</td>
						<td class="date"><%= order.status_i18n %></td>
						<td><%= link_to "注文詳細", admin_order_path(order.id), class: "btn btn-default col-xs-12" %></td>
					</tr>
					<% end %>
				</table>

				<div class="link_path2">
				<%= paginate @orders %>
				</div>
			</div>
		</div>
	</div>
</div>
