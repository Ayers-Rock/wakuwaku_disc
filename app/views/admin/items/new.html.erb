<div class="container item-new-box">
    <div class="row">
        <div class="col-lg-10 col-lg-offset-1">
            <div class="form-box">
                <%= form_with(model: @item, url: admin_items_path, local: true) do |s| %>
                    <div class="h2-box">
                        <h2>新規商品追加</h2>
                    </div>
                    <div>
                        <p><%= s.label :"アーティスト名" %></p>
                        <p><%= s.collection_select :artist_id, Artist.all, :id, :artist_name, :prompt => "選択して下さい" %></p>
                    </div>
                    <div>
                        <p><%= s.label :"シングル/アルバム名" %></p>
                        <p><%= s.text_field :title %></p>
                    </div>
                    <div>
                        <p><%= s.label :"レーベル名" %></p>
                        <p><%= s.collection_select :label_id, Label.all, :id, :label_name, :prompt => "選択して下さい" %></p>
                    </div>
                    <div>
                        <p><%= s.label :"ジャンル名" %></p>
                        <p><%= s.collection_select :genre_id, Genre.all, :id, :genre_name, :prompt => "選択して下さい" %></p>
                    </div>
                    <div id="discs">
                        <%= s.fields_for :discs do |t| %>
                            <%= render "disc_fields", f: t %>
                        <% end %>
                        <div class="links">
                            <%= link_to_add_association "ディスクを追加", s, :discs %>
                        </div>
                    </div>
                    <div>
                        <p><%= s.label :"税抜価格" %></p>
                        <p><%= s.text_field :price %></p>
                    </div>
                    <div>
                        <p><%= s.label :"ジャケット画像" %></p>
                            <p><%= s.attachment_field :jacket_image %></p>
                    </div>
                    <div class="radio-box">
                        <span><%= s.label :"販売ステータス", class: "label-1" %></span>
                        <span><%= s.label :"販売中" %></span>
                        <span><%= s.radio_button :status, "available" %></span>
                        <span><%= s.label :"販売停止中" %></span>
                        <span><%= s.radio_button :status, "not_available" %></span>
                    </div>
                    <div class="submit-button">
                        <%= s.submit "保存", class: "btn btn-lg btn-primary" %>
                    </div>
                <% end %>
            </div>
        </div>
    </div>
</div>