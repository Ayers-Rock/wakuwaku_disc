<h1>Admin::Items#show</h1>
<p>Find me in app/views/admin/items/show.html.erb</p>

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <p>商品詳細</p>
            <div>
                <div>
                    <p>
                        <%= attachment_image_tag @item, :jacket_image, :fill, 300, 300 %>
                    </p>
                    <div>
                        <p><span>タイトル :</span><%= @item.title %></p>
                        <br><br>
                        <p><span>アーティスト名 :</span><%= @item.artist.artist_name %></p>
                    </div>
                </div>
                <div>
                    <div>
                        <div>
                            <p>レーベル名</p>
                        </div>
                        <div>
                            <p><%= @item.label.label_name %></p>
                        </div>
                        <div>
                            <p>ジャンル</p>
                        </div>
                        <div>
                            <p><%= @item.genre.genre_name %></p>
                        </div>
                        <div>
                            <p>曲名</p>
                        </div>
                        <%= @tracks.each do |track| %>
                            <div>
                                <p><%= track.track_name %></p>
                            </div>
                        <% end %>
                        <div>
                            <p>価格(税別価格)</p>
                        </div>
                        <div>
                            <p><%= "#{@item.price}円" %></p>
                        </div>
                        <div>
                            <p>ステータス</p>
                        </div>
                        <div>
                            <p><%= @item.status %></p>
                        </div>
                        <div>
                            <p>在庫数</p>
                        </div>
                        <div>
                            <%# <p><%=# item.stocks.arrival_count - item.oreder_items.amount</%#> %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>