    <div class="container" style="margin-top: 40px;">
        <h2 class="title">ユーザー一覧</h2>
        <div class="user-search-box">
            <%= form_tag(admin_users_path,method: :get) do %>
                <%= text_field_tag :search, "", placeholder: "ユーザー名、メールアドレスで検索" %>
                <%= button_tag '<i class="fa fa-search"></i>'.html_safe, type: 'submit', :name => nil %>
            <% end %>
        </div>
        <table class="table table-bordered" style="text-align: center;">
                <thead>
                    <tr>
                        <th style="text-align: center;">名前</th>
                        <th style="text-align: center;">名前(カナ)</th>
                        <th style="text-align: center;">郵便番号</th>
                        <th style="text-align: center;">住所</th>
                        <th style="text-align: center;">電話番号</th>
                        <th style="text-align: center;">メールアドレス</th>
                        <th style="text-align: center;">/</th>
                    </tr>
                </thead>
                <tbody>
                    <% @users. each do |user| %>
                        <tr>
                            <td><%= link_to "#{user.last_name+user.first_name}",admin_user_path(user.id) %></td>
                            <td><%= user.last_kana_name %><%= user.first_kana_name %></td>
                            <td><%= user.postal_code %></td>
                            <td><%= user.prefecture %><%= user.city_address %><%= user.building %></td>
                            <td><%= user.tel_number %></td>
                            <td><%= user.email %></td>
                            <td><%= link_to '編集', edit_admin_user_path(user.id), class:"btn btn-success" %></td>
                        </tr>
                    <% end %>
                </tbody>
        </table>
         <div style="text-align: center;">
            <%= paginate @users %>
        </div>
    </div>