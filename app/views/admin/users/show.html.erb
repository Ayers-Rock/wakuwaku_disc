<div class="container">
    <div class="row">
        <div class="col-md-6">
            <h2>ユーザー情報</h2>
                <table class="table table-bordered">
                <tr>
                    <th>名前</th>
                    <td><%= @user.last_name %><%= @user.first_name %></td>
                </tr>
                <tr>
                    <th>名前(カナ)</th>
                    <td><%= @user.last_kana_name %><%= @user.first_kana_name %></td>
                </tr>
                <tr>
                    <th>郵便番号</th>
                    <td><%= @user.postal_code %></td>
                </tr>
                <tr>
                    <th>住所</th>
                    <td><%= @user.prefecture %><%= @user.city_address %><%= @user.building %></td>
                </tr>
                <tr>
                    <th>電話番号</th>
                    <td><%= @user.tel_number %></td>
                </tr>
                <tr>
                    <th>メールアドレス</th>
                    <td><%= @user.email %></td>
                </tr>
                <tr>
                    <th>パスワード</th>
                    <td><%= @user.password %></td>
                </tr>
            </table>
                <div class="botton">
                <%= link_to '編集', edit_admin_user_path(@user.id), class:"btn btn-success" %>&emsp;<%= link_to '退会', admin_user_path(@user.id), method: :delete, class:"btn btn-danger" %>
                </div>
        </div>
        <div class="col-md-6">
                <h2>登録住所一覧</h2>
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>名前</th>
                                <th>住所</th>
                                <th>/</th>
                                <th>/</th>
                            <tr>
                        </thead>
                        <tbody>
                            <% @user.addresses. each do |address| %>
                                <tr>
                                    <td><%= address.first_name %><%= address.last_name %>
                                    </td>
                                    <td><%= address.prefecture %><%= address.city_address %><%= address.building %>
                                    </td>
                                    <td><%= link_to '編集', edit_user_address_path(address.user.id, address.id), class:"btn btn-success" %></td>
                                    <td><%= link_to '削除', user_address_path(address.user.id,address.id), method: :delete, class:"btn btn-danger" %></td>
                                </tr>
                            <% end %>
                        </tbody>
                    </table>
        </div>
    </div>
    <div class="col-md-12">
        <h2>購入履歴</h2>
			<br>
			<table class="tableindex table-condensed">
				<tr>
					<th>購入者</th>
					<th>購入日</th>
					<th>購入価格総計</th>
					<th>ステータス</th>
				</tr>
				<% @user.orders.each do |order| %>
				<tr>
					<td style="text-align:center;"><font size="2"><%= order.user.last_name + order.user.first_name %></font></td>
					<td style="text-align:center;"><font size="2"><%= order.created_at %></font></td>
					<td style="text-align:center;"><font size="2"><%= order.total_price.round(0) %>円</font></td>
					<td style="text-align:center;"><font size="2"><%= order.status_i18n %></font></td>
				</tr>
				<% end %>
			</table>
            <div class="text-center">
                <%= link_to 'ユーザー管理ページへ戻る', admin_users_path %>
            </div>
</div>