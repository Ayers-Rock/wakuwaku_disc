
    <div class="container">
        <div class="row">
            <div class="col-md-8 col-md-offset-2">
                <h2>ユーザー編集</h2>
                    <%= form_for(@user, url: admin_user_path(@user.id)) do |f| %>
                        <div class="field">
                            <P>名前</p>
                            <%= f.label :姓 %>
                            <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
                            <%= f.label :名 %>
                            <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
                        </div>

                        <div class="field">
                            <p>名前（カタカナ）</p>
                            <%= f.label :姓 %>
                            <%= f.text_field :first_kana_name, autofocus: true, autocomplete: "first_kana_name" %>
                            <%= f.label :名 %>
                            <%= f.text_field :last_kana_name, autofocus: true, autocomplete: "last_kana_name" %>
                        </div>

                        <div class="field">
                            <%= f.label :メールアドレス %>
                            <%= f.text_field :email, autofocus: true, autocomplete: "email" %>
                        </div>
                        <div class="field">
                            <%= f.label :パスワード %>
                            <%= f.text_field :password, autofocus: true, autocomplete: "password" %>
                        </div>
                        <div class="field">
                            <%= f.label :郵便番号 %><br />
                            <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
                        </div>

                        <div class="field">
                            <%= f.label :都道府県 %><br />
                            <%= f.text_field :prefecture, autofocus: true, autocomplete: "prefecture"%>
                        </div>

                        <div class="field">
                            <%= f.label :市区町村　番地 %><br />
                            <%= f.text_field :city_address, autofocus: true, autocomplete: "city_address" %>
                        </div>

                        <div class="field">
                            <%= f.label :建物名　部屋番号 %><br />
                            <%= f.text_field :building, autofocus: true, autocomplete: "building" %>
                        </div>

                        <div class="field">
                            <%= f.label :電話番号 %>
                            <%= f.telephone_field :tel_number, autofocus: true, autocomplete: "tel_number" %>
                        </div>

                        <div class="actions">
                            <%= f.submit "更新する" %>
                        </div>
                    <% end %>
            </div>
        </div>
    </div>
