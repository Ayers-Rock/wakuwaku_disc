<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div>
                <%= form_for([:admin, @genre]) do |f| %>
                    <p>新規ジャンル追加</p>
                    <p><span>ジャンル名</span><%= f.text_field :genre_name %></p>
                    <p><%= f.submit "追加" %></p>
                <% end %>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <table>
                <tr>
                    <th>id</th>
                    <th>ジャンル</th>
                </tr>
                <% @genres.each do |genre| %>
                    <tr>
                        <td><%= genre.id %></td>
                        <td><%= genre.genre_name %></td>
                        <td>
                            <%= link_to admin_genre_path(genre.id), method: :delete do %>
                                <button>削除</button>
                            <% end %>
                        </td>
                    </tr>
                <% end %>
            </table>
            <%= link_to "商品管理へ戻る", admin_items_path %>
        </div>
    </div>
</div>
