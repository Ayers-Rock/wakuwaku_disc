<div class="container">
  <div class="row">
    <div class="col-lg-6 col-lg-offset-3">
      <div class="box">
          <div class="row">
            <div class="col-lg-10 col-lg-offset-1">
              <h2>ログイン</h2>
              <br>
              <br>
              <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                <div class="field">
                  <%= f.label :メールアドレス %><br />
                  <%= f.email_field :email, autofocus: true, autocomplete: "email", :size => "60*60" %>
                </div>
                <br>

                <div class="field">
                  <%= f.label :パスワード %><br />
                  <%= f.password_field :password, autocomplete: "current-password", :size => "60*60" %>
                </div>
                <br>

                <% if devise_mapping.rememberable? %>
                  <div class="field">
                    <%= f.check_box :remember_me %>
                    <%= f.label :remember_me, :size => "60*60" %>
                  </div>
                <% end %>

                <div class="actions">
                  <%= f.submit "ログイン", :class => "btn btn-info" %>
                </div>
              <% end %>

              <%= render "devise/shared/links" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
