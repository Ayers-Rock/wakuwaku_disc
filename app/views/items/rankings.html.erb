
<div class="container">
    <div class="row" id="container">
        <%# <div class="col-md-6 col-md-offset-3"> %>
            <div id="theTarget">
                <% @slide_jackets.each do |item| %>
                    <div class="image1">
                        <%= link_to item_path(item.id) do %>
                        <%= attachment_image_tag item, :jacket_image, size: "300x300", format: 'jpeg', fallback: "no_image.jpg", size:"300x300"  %>
                        <% end %>
                    </div>
                <% end %>
            </div>
        <%# </div> %>
    </div>

    <div class="row">
        <div class="col-md-8">

            <h2>月間ランキング</h2>
            <div class="monthly">
                <div class="row">
                    <% @monthly_ranks.each.with_index(1) do |item, i| %>
                        <div class="col-md-4 rankings-box">
                            <div>
                                <%= "第#{i}位" %><br>
                                <%= attachment_image_tag item, :jacket_image, size: "150x150", format:'jpeg' %><br>
                            <%# </div> %>
                            <%# <div class="col-md-10"> %>
                                <%= link_to "#{item.title}",item_path(item.id) %><br>
                                <%= item.artist.artist_name %>
                            </div>
                        </div>
                    <% end %>
                </div>
            </div>
                <%# <%= link_to '月間ランキングへ', ranking_items_path %>

            <h2>いいねランキング</h2>
            <div class="favorite">
                <div class="row">
                    <% @favorite_ranks.each.with_index(1) do |item, i| %>
                        <div class="col-md-4 rankings-box">
                            <div>
                                <%= "第#{i}位" %><br><%= attachment_image_tag item, :jacket_image, size: "100x100", format:'jpeg' %>
                                <p><%= link_to "#{item.title}",item_path(item.id) %></p>
                                <p><%= item.artist.artist_name %></p>
                            </div>
                        </div>
                    <% end %>
                </div>
            </div>
            <%= link_to '各ランキングへ', ranking_items_path %>

            <h2>新着CD</h2>
            <div class="newcd">
                <div class="row">
                    <% @new_cd.each.with_index(1) do |item, i| %>
                        <div class="col-md-4 rankings-box">
                            <div>
                                <%= attachment_image_tag item, :jacket_image, size: "100x100", format:'jpeg' %>
                                <p><%= link_to "#{item.title}",item_path(item.id) %></p>
                                <p><%= item.artist.artist_name %></p>
                            </div>
                        </div>
                    <% end %>
                </div>
            </div>
            <%= link_to '商品一覧へ', items_path %>
        </div>
    <%# </div> %>

    <%# <div class="row"> %>
        <div class="col-md-4">
            <div class="weekly">
                <h3>週間ランキング</h3>
                    <% @weekly_ranks.each.with_index(1) do |item, i| %>
                        <%= "第#{i}位" %>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<%= attachment_image_tag item, :jacket_image, size: "80x80", format:'jpeg' %>
                        <p><%= link_to "#{item.title}",item_path(item.id) %></p>
                        <p><%= item.artist.artist_name %></p>
                        <%# </div> %>
                    <% end %>
                </div>
            </div>
        </div>

    </div>
</div>
