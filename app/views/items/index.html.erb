<h2>CD一覧</h2>
<% @items. each do |item| %>
    <div class="container">
        <div class="col-md-10 col-md-offset-1">
            <div class="row">
                <div class="col-md-2">
                    <%= attachment_image_tag item, :jacket_image, :fill, 100, 100, format:'jpeg' %>
                </div>
                <div class="col-md-10">
                    <p><%= link_to "#{item.title}",item_path(item.id) %></p>
                    <p><%= item.artist %></p>
                </div>
            </div>
            <div class="row">
                <div class="col-md-2 col-md-offset-4">
                    <p><%= item.price %>(税込)</p>
                </div>
                <div class="col-md-6">
                    <button><%= link_to 'お気に入り', favorites_path %></button>
                                <%= form_for @cart_item do |f| %>
                                <%= f.number_field :amount %>
                                <%= f.hidden_field :item_id, value: item.id %>
                                <%= f.submit 'カートに入れる' %>
                            <% end %>
                </div>
            </div>
        </div>
    </div>
    <% end %>