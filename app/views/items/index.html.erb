    <div class="container">
        <div class="row">
            <div class="col-md-1">
                <ul>
                    <li>aaa</li>
                    <li>bbb</li>
                </ul>
            </div>
            <div class="col-md-11">
            <h2>CD一覧</h2>
                <div class="row">
                    <% @items.each do |item| %>
                        <div class="col-md-2">
                            <%= attachment_image_tag item, :jacket_image, :fill, 100, 100, format:'jpeg' %>
                        </div>
                        <div class="col-md-10">
                            <p><%= link_to "#{item.title}",item_path(item.id) %></p>
                            <p><%= item.artist.artist_name %></p>
                        </div>
                        <div class="col-md-2 col-md-offset-5">
                            <p><%= item.price %>(税込)</p>
                        </div>
                        <div class="col-md-5">
                            <div id="favorite-button-<%=item.id %>">
                                <%= render 'favorites/favorite', item: item %>
                            </div>
                        </div>
                        <div>
                        <%= form_for @cart_item do |f| %>
                            <%= f.number_field :amount %>
                            <%= f.hidden_field :item_id, value: item.id %>
                            <%= f.submit 'カートに入れる' %>
                        <% end %>
                        </div>
                    <% end %>
                </div>
            </div>
        </div>
    </div>