
<% if @order.errors.any? %>
  <h2 class="error-message-d">エラー！</h2>
  <h3 class="erro-message-d">配送先情報を正しく入力してください　</h3>
<% end %>


<%= form_for(@order) do |f| %>
  <div class="field">
    <P>名前</p>
    <%= f.label :姓 %>
    <%= f.text_field :delivery_last_name, autofocus: true, autocomplete: "delivery_last_name" %>
    <%= f.label :名 %>
    <%= f.text_field :delivery_first_name, autofocus: true, autocomplete: "delivery_first_name" %>
  </div>

  <div class="field">
    <p>名前（カタカナ）</p>
    <%= f.label :姓 %>
    <%= f.text_field :delivery_last_kana_name, autofocus: true, autocomplete: "delivery_last_kana_name" %>
    <%= f.label :名 %>
    <%= f.text_field :delivery_first_kana_name, autofocus: true, autocomplete: "delivery_first_kana_name" %>
  </div>

  <div class="field">
    <%= f.label :郵便番号 %><br />
    <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
  </div>

  <div class="field">
    <%= f.label :都道府県 %><br />
    <%= f.text_field :prefecture, autofocus: true, autocomplete: "prefecture"%>
  </div>

  <div class="field">
    <%= f.label :市区町村　番地 %><br />
    <%= f.text_field :city_address, autofocus: true, autocomplete: "city_address" %>
  </div>

  <div class="field">
    <%= f.label :建物名　部屋番号 %><br />
    <%= f.text_field :building, autofocus: true, autocomplete: "building" %>
  </div>


  <p>支払い方法</p>
  <%= @order.payment_i18n %>

  <div class="actions">
    <%= f.submit "変更" %>
  </div>
<% end %>

