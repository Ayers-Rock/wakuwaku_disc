<h2>購入履歴</h2>


<% @orders.each do |order| %>
<table>
  <thead>
    <tr>
      <th>
        <%= order.created_at.strftime('%Y/%m/%d') %>ご注文
        <%= link_to '(詳細へ)', order_path(order.id) %>
      </th>
    </tr>
    <tr>
        <th>ご注文番号</th>
        <th>商品</th>
        <th>配送先</th>
        <th>配送状況</th>
        <th></th>
    </tr>
  </thead>
  <tbody>
    <% order.order_items.each do |order_item| %>
      <tr>
        <td><%= order_item.with_deleted_item.title %></td>
        <td><%= order_item.with_deleted_item.title %></td>
        <td><%= order_item.order.delivery_last_name %><%= order_item.order.delivery_first_name %></td>
        <td><%= order.status_i18n %>
          <% if order.status == "preparing" %>
            <td></td>
          <% else %>
            <td>
              <%= link_to item_path(order_item.item_id) do %>
                <button class="btn-sticky">レビューを書く</button>
              <% end %>
            </td>
          <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<% end %>

<%= link_to "マイページへ戻る", user_path(current_user.id) %>
