<%= render '', : @ %>
<h2>ユーザー情報</h2>
    <table class="table table-bordered">
        <% @users. each do |user| %>
            <thead>
                <tr>
                    <td><%= user.name %></td>
                </tr>
            <tbody>
                <tr>
                    <td><%= user.prefecture %>
                    <%= user.city_address %>
                    <%= user.building %></td>
                </tr>
            </tbody>
            <tfoot>
                <tr>
                    <td><%= user.email %></td>
                </tr>
            </tfoot>
        <% end %>
    </table>
    <div class="btn-group">
            <button><%= link_to "住所一覧", addresses_path, class="btn btn-default" %></button>
            <button><%= link_to "住所入力フォーム", new_address_path, class="btn btn-default" %></button>
            <button><%= link_to "ユーザー情報編集", edit_user_path(user.id), class="btn btn-default" %></button>
    </div>
        <p><%= link_to "退会する？", user_path(user.id), method: :delete %></p>

