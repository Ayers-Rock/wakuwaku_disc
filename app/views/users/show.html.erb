<h2>ユーザー情報</h2>
    <table class="table">
        <% @users. each do |user| %>
            <thead>
                <tr>
                    <td><%= user.last_name %><%= user.first_name %></td>
                </tr>
            <tbody>
                <tr>
                    <td><%= user.prefecture %>
                    <%= user.city_address %>
                    <%= user.building %></td>
                </tr>
            </tbody>
            <tfoot>
                <tr>
                    <td><%= user.email %></td>
                </tr>
            </tfoot>
        <% end %>
    </table>
    <div class="btn-group">
            <button><%= link_to "住所一覧", addresses_path %></button>
            <button><%= link_to "住所入力フォーム", new_address_path %></button>
            <button><%= link_to "ユーザー情報編集", edit_user_path(@user.id) %></button>
    </div>
        <p><%= link_to "退会する？", user_path(@user.id), method: :delete %></p>

